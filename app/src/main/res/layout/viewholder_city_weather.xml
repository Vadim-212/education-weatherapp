<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textview_viewholder_city_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_weather_temperature_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â°C"
        app:layout_constraintStart_toEndOf="@id/textview_viewholder_city_weather_temperature"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_weather_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_viewholder_city_weather_temperature_degree"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="City"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_weather_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_viewholder_city_weather_city"
        app:layout_constraintTop_toTopOf="parent"
        android:text=", "
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_weather_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_viewholder_city_weather_comma"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Country"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/button_viewholder_city_weather_delete_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="X"/>

    <View
        android:id="@+id/view_viewholder_city_weather_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_city_weather_country"
        android:background="#707070"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>