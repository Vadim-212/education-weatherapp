<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textview_viewholder_city_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="City"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_viewholder_city_city"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/viewholder_city_textview_comma"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textview_viewholder_city_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_viewholder_city_comma"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Country"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/view_viewholder_city_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_viewholder_city_country"
        android:background="#707070"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>